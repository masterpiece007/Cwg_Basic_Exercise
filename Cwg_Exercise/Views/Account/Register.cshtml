@model Cwg_Exercise.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



<div id="parallex-inner" class="parallex">
    <div class="container">
        <div class="eight columns animated fadeInUp" data-animated="fadeInUp">
            <h1>Registration</h1>
            <p></p>
        </div>
        <div class="eight columns">
            <nav id="breadcrumbs">

            </nav>
        </div>
    </div>
</div>

<div class="container animated fadeInDown" data-animated="fadeInDown">
    <div class="col-md-8">
        <section id="RegisterForm">
     @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "width:30%" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "width:30%" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "width:30%" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

        </section>
      
    </div>
    <hr class="sep50">
</div>





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
